# ===========================================
# UNM-Server V2 Netlify 生产环境配置
# ===========================================

# ===========================================
# 基础应用配置
# ===========================================
NODE_ENV=production
PORT=8888

# ===========================================
# 服务启用开关 (true/false)
# ===========================================

# Redis 缓存服务 (Netlify 推荐使用内存缓存)
REDIS_ENABLED=false
# 数据库服务 (推荐使用 Supabase 或 PlanetScale)
DATABASE_ENABLED=true
# 日志记录
LOGGING_ENABLED=true
# 速率限制
RATE_LIMITING_ENABLED=true
# 健康检查
HEALTH_CHECK_ENABLED=true
# 安全中间件
SECURITY_MIDDLEWARE_ENABLED=true
# CORS 保护
CORS_ENABLED=true
# 缓存系统
CACHE_ENABLED=true
# 监控指标
METRICS_ENABLED=false
# API 文档
API_DOCS_ENABLED=false
# GDStudio API
GDSTUDIO_ENABLED=true

# ===========================================
# Redis 配置 (当 REDIS_ENABLED=true 时生效)
# ===========================================
# 如果使用 Upstash Redis:
# REDIS_URL="rediss://username:password@host.upstash.io:port"
REDIS_URL=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_MS=1000
REDIS_CONNECT_TIMEOUT_MS=5000
REDIS_COMMAND_TIMEOUT_MS=3000

# ===========================================
# 数据库配置 (当 DATABASE_ENABLED=true 时生效)
# ===========================================
# Supabase 示例:
# DATABASE_URL="postgresql://username:password@host.supabase.co:5432/database"
# PlanetScale 示例:
# DATABASE_URL="mysql://username:password@host.planetscale.com/database?sslaccept=strict"
DATABASE_URL=
DATABASE_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT_MS=5000

# ===========================================
# 缓存配置 (当 CACHE_ENABLED=true 时生效)
# ===========================================
CACHE_DEFAULT_TTL_SECONDS=900
CACHE_MAX_MEMORY_MB=25
CACHE_CLEANUP_INTERVAL_MS=600000

# ===========================================
# 安全配置 (当 SECURITY_MIDDLEWARE_ENABLED=true 时生效)
# ===========================================
# CORS 域名配置 (生产环境必须设置具体域名)
ALLOWED_DOMAIN=https://unms.netlify.app
# 多域名示例: ALLOWED_DOMAIN=https://api.yourdomain.com,https://app.yourdomain.com

# JWT 密钥 (生产环境必须设置)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# 速率限制配置 (当 RATE_LIMITING_ENABLED=true 时生效)
# ===========================================
GLOBAL_RATE_LIMIT_PER_MINUTE=200
API_RATE_LIMIT_PER_MINUTE=80
SEARCH_RATE_LIMIT_PER_MINUTE=40

# ===========================================
# 外部 API 配置 (当 GDSTUDIO_ENABLED=true 时生效)
# ===========================================
GDSTUDIO_API_URL=https://music-api.gdstudio.xyz/api.php
GDSTUDIO_REQUEST_TIMEOUT=6000
GDSTUDIO_MAX_RETRIES=3

# ===========================================
# UNM 配置
# ===========================================
UNM_DEFAULT_SOURCES=netease,tencent,kugou
UNM_FALLBACK_SOURCE=kugou
UNM_REQUEST_TIMEOUT=6000
UNM_TEST_SONG_ID=416892104

# ===========================================
# 代理配置 (可选)
# ===========================================
PROXY_URL=

# ===========================================
# 日志配置 (当 LOGGING_ENABLED=true 时生效)
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5

# ===========================================
# 监控配置 (当 METRICS_ENABLED=true 时生效)
# ===========================================
METRICS_PORT=9090
METRICS_PATH=/metrics
PROMETHEUS_ENABLED=false

# ===========================================
# 健康检查配置 (当 HEALTH_CHECK_ENABLED=true 时生效)
# ===========================================
HEALTH_CHECK_INTERVAL_MS=30000
HEALTH_CHECK_TIMEOUT_MS=5000

# ===========================================
# 生产环境配置
# ===========================================
# 生产模式配置
DEV_MODE_ENABLED=false
# API 响应不美化 (节省带宽)
JSON_PRETTY_PRINT=false
# 不显示详细错误信息 (安全考虑)
DETAILED_ERRORS=false

# ===========================================
# Docker 配置
# ===========================================
# PostgreSQL
POSTGRES_DB=unm_server
POSTGRES_USER=unm
POSTGRES_PASSWORD=password

# Redis (Docker)
REDIS_DOCKER_PASSWORD=

# ===========================================
# SSL/TLS 配置 (生产环境)
# ===========================================
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ===========================================
# 性能优化配置
# ===========================================
# 连接池大小
CONNECTION_POOL_SIZE=10
# 请求超时 (毫秒)
REQUEST_TIMEOUT_MS=30000
# 保持连接时间 (毫秒)
KEEP_ALIVE_TIMEOUT_MS=65000
# 最大请求体大小 (MB)
MAX_REQUEST_SIZE_MB=10

# ===========================================
# 部署环境标识
# ===========================================
DEPLOYMENT_ENV=netlify
DEPLOYMENT_VERSION=2.0.0

# ===========================================
# UnblockNeteaseMusic 功能设置项
# ===========================================
# 歌曲启用无损音质 (true 或 false)
ENABLE_FLAC=true
# 启用无损音质时，是否选择音质最高的 (true 或 false)
SELECT_MAX_BR=true
# 是否严格按照配置音源设置顺序进行匹配 (true 或 false)
FOLLOW_SOURCE_ORDER=true

# ===========================================
# Cookie 和 API 密钥设置 (敏感信息)
# Netlify 部署注意事项：
# 1. 请在 Netlify Dashboard 中设置这些环境变量
# 2. 不要在代码仓库中提交真实的敏感信息
# 3. 使用 Netlify CLI: netlify env:set VARIABLE_NAME "value"
# ===========================================
# 网易云音乐 Cookie (在 Netlify Dashboard 设置)
NETEASE_COOKIE=
# JOOX Cookie (在 Netlify Dashboard 设置)
JOOX_COOKIE=
# 咪咕音乐 Cookie (在 Netlify Dashboard 设置)
MIGU_COOKIE=
# QQ音乐 Cookie (在 Netlify Dashboard 设置)
QQ_COOKIE=
# YouTube Data API 密钥 (在 Netlify Dashboard 设置)
YOUTUBE_KEY=
